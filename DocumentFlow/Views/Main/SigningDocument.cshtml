@model DocumentFlow.Models.DocumentView
@{
    ViewBag.Title = "SigningDocument";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div>
    @Html.Raw(Model.Text)
</div>

<div>
    @Html.Raw(Model.Path)
</div>
<hr/>
<div style="display: inline-block; float: right;">
    <div class="btn-group">
        @Html.ActionLink("Подписать", "SignDocument", "Main", new { id = Model.Id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Отклонить", "RejectDocument", "Main", new { id = Model.Id }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Закрыть", "Inbox", "Main", null, new { @class = "btn btn-default" })
    </div>

</div>