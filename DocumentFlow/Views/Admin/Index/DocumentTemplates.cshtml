@model IEnumerable<EntityModels.DocumentTemplate>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-block">
    <div class="main-blcok-wrapper">
        <div class="header">
            <h1>Шаблоны документов</h1>
        </div>
        <div class="middle">
            @Html.ActionLink(" ", "CreateTemplate", "Admin", new {@class = "add-new-entry"})
            <br>
            <div class="middle">
                <table style="margin-bottom: 20px; width: 40%;">
                    @if (Model != null && Model.Count() != 0)
                    {
                        <thead>
                        <tr>
                            <th>Название</th>
                            <th>Тип</th>
                            <th>Операция</th>
                        </tr>
                        </thead>
                        foreach (var item in Model)
                        {
                            <tbody>
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.TypeId</td>
                                <td class="action-buttons">
                                    @Html.ActionLink(" ", "EditTemplate", "Admin", new {id = item.Id}, new {@class = "edit-button"})
                                    @Html.ActionLink(" ", "RemoveTemplate", new {id = item.Id}, new {@class = "remove-button"})
                                </td>
                            </tr>
                            </tbody>
                        }
                    }
                    else
                    {
                        <tr>список пуст</tr>
                    }
                </table>
            </div>
            <div class="footer">
                <h1>© Copyright 2015. All rights reserved by Demen_off</h1>
            </div>
        </div>
    </div>
</div>