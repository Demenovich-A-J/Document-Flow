@model DocumentFlow.Models.DocumentTemplate
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-block">
    <div class="main-blcok-wrapper">

        <div class="header">
            <h1>Добавление документа</h1>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @id = "edit", autofocus = "" } })

            <input class="button" name="submit" type="submit" value="Добавить">

            <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
            <script src="~/Content/js/froala_editor.min.js"></script>
            <!--[if lt IE 9]>
            <script src="~/Content/js/froala_editor_ie8.min.js"></script>
            <![endif]-->
            <script src="~/Content/js/plugins/tables.min.js"></script>
            <script src="~/Content/js/plugins/lists.min.js"></script>
            <script src="~/Content/js/plugins/colors.min.js"></script>
            <script src="~/Content/js/plugins/media_manager.min.js"></script>
            <script src="~/Content/js/plugins/font_family.min.js"></script>
            <script src="~/Content/js/plugins/block_styles.min.js"></script>
            <script src="~/Content/js/plugins/video.min.js"></script>
            <script>
            $(function () {
                $('#edit').editable({
                    inlineMode: false,
                    theme: 'gray',
                    language: 'ru',
                    imageUploadURL: 'upload_image.php',
                    imagesLoadURL: 'load_images.php',
                    imageDeleteURL: 'delete_image.php',
                })
                .on('editable.afterRemoveImage', function (e, editor, $img) {
                    editor.options.imageDeleteParams = { src: $img.attr('src') };
                    editor.deleteImage($img);
                });
            });
            </script>
        }
    </div>
    <div class="footer">
        <h1>© Copyright 2015. All rights reserved by Demen_off</h1>
    </div>
</div>


