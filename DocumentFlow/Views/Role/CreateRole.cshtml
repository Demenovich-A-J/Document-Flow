@model DocumentFlow.Models.Role
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-block">
    <div class="main-blcok-wrapper">

        <div class="header">
            <h1>Добавление роли</h1>
        </div>
        <div class="new-meta">

            @using (Html.BeginForm("CreateRole", "Role", FormMethod.Post, new {@class = "admin-login", @id = "edit-role"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <span style="width: 155px;">Название роли: </span>
                @Html.EditorFor(model => model.Name)
                <br>
                <span style="width: 155px;">Описание роли: </span>
                @Html.EditorFor(model => model.Description)
                <br>
                <input class="button" name="submit" type="submit" value="Добавить">
            }
        </div>
    </div>
</div>